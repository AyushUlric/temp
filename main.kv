#import SlideTransition kivy.uix.screenmanager.SlideTransition
<SearchResultBox>
	tnailUrl: ''
	vTitle: ''
	cName: ''
	vidid: ''
	orientation: 'vertical'
	size_hint_y: None
	BoxLayout:
		orientation: 'vertical'
		size_hint_y: None
		GridLayout:
			spacing: 20
			rows: 4
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: None
				height: 480
				FitImage:
					source: root.tnailUrl
		
			MDLabel:
				markup: True
				text: "[b]"+root.vTitle

			Widget:
				height: 10
		
			GridLayout:
				cols: 3
				spacing: 25
				MDLabel:
					markup: True
					text: "[i][size=14]"+root.cName
				MDFillRoundFlatButton:
					text: "Download MP3"
					on_release: app.downloadmp3(root.vidid)
				MDFillRoundFlatButton:
					text: "Download"
					on_release: app.download(root.vidid)


<SearchBox@MDCard>:
	orientation: 'vertical'
	size_hint_y: None
	padding: 20
	BoxLayout:
		orientation: 'vertical'
		MDProgressBar:
		    id: progress
		    color: 0,0,1,1
	        type: "determinate"
			pos_hint: {'center_y': 0.9} 

		Widget:
			height: 25

		GridLayout:
			spacing: 20
			cols: 2
			MDTextField:
				id: search
				mode: "rectangle"
				hint_text: "Search Videos On Youtube"
			MDFlatButton:
				size_hint_x: None
				width: 100
				text: "Search"
				on_release: app.populate(search.text)
		Widget:
			height: 20
ScreenManager:
	HomeScreen:
		name: 'home_screen'
		id: home_screen

<HomeScreen>
	MDBoxLayout:
		orientation: 'vertical'
		MDToolbar:
			id: toolbar
			title: 'YouTube Downloader'
			elevation: 0    
			
		ScrollView:
			MDList:
				spacing: 50
				SearchBox:
					id: box
				MDList:
					spacing: 600
					id: results
	MDSpinner:
		id: spinner
		size_hint: None, None
        size: dp(54), dp(54)
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		active: False


